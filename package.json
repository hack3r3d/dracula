{
  "name": "dracula",
  "version": "1.0.0",
  "description": "Dracula is a simple counter.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "require": "./dist/config.js",
      "import": "./dist/config.js"
    },
    "./db/mongodb": {
      "types": "./dist/db/mongodb.d.ts",
      "require": "./dist/db/mongodb.js",
      "import": "./dist/db/mongodb.js"
    },
    "./db/mongo-counter-store": {
      "types": "./dist/db/mongo-counter-store.d.ts",
      "require": "./dist/db/mongo-counter-store.js",
      "import": "./dist/db/mongo-counter-store.js"
    },
    "./db/sqlite-counter-store": {
      "types": "./dist/db/sqlite-counter-store.d.ts",
      "require": "./dist/db/sqlite-counter-store.js",
      "import": "./dist/db/sqlite-counter-store.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "require": "./dist/errors.js",
      "import": "./dist/errors.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm run build && jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hack3r3d/dracula.git"
  },
  "author": "Keith Vance",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hack3r3d/dracula/issues"
  },
  "homepage": "https://github.com/hack3r3d/dracula#readme",
  "keywords": [
    "counter",
    "analytics",
    "event",
    "mongo",
    "mongodb",
    "sqlite",
    "typescript",
    "nodejs"
  ],
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^18 || ^20"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "dotenv-safe": "^9.1.0",
    "mongodb": "^7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dotenv-safe": "^9.1.0",
    "@types/jest": "^29.5.12",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.9.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "mongodb-memory-server": "^9.4.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
